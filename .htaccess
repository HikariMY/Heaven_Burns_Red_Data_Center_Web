# ---- Force HTTPS ----
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ---- Disable directory listing ----
Options -Indexes

# ---- Block sensitive files ----
<FilesMatch "(^\.|composer\.(json|lock)|package(-lock)?\.json|yarn\.lock|.*\.(sql|zip|bak)|phpunit\.xml|README|LICENSE)$">
  Require all denied
</FilesMatch>

# ---- Anti-hotlink (แก้ yourdomain.com ให้ตรงโดเมนจริง) ----
RewriteCond %{HTTP_REFERER} !^$ 
RewriteCond %{HTTP_REFERER} !^https?://(.*\.)?heavenburnsreddatacenter\.gamer.gd/ [NC]
RewriteCond %{HTTP_REFERER} !^https?://(.*\.)?www\.heavenburnsreddatacenter\.gamer.gd/ [NC]
RewriteRule \.(gif|jpe?g|png|webp|svg|mp4|webm|css|js)$ - [F,NC]
